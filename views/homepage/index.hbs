<main role="main" class="container">
  <div class="row">
    <div class="col-12">
    </div>
  </div>
 
  {{#if urls}}
  <table class="table mt-5">
  <thead>
    <tr>
      <th scope="col">Original</th>
      <th scope="col">Shortened</th>
      <th scope="col">redirects</th>

    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="col">{{urls.original}}</th>
      <th scope="col">{{urls.new}}</th>
      <th scope="col">{{urls.redirects}}</th>
    </tr>
  </tbody>
</table>

{{else}}

 <div class="row mt-5">
    <div class="col-lg-12" >
      <form class="form-inline" action="/urls" method="POST">
        <div class="input-group w-100">
          <input id="original_url" type="text" name="originalUrl" placeholder="https://fasÃ±lfj.com" class="form-control">
          <div class="input-group-append">
            <button type="submit" class="btn btn-primary"> Shorten </button>
          </div>
        </div>
      </form>
    </div>
  </div>
{{/if}}

{{#if urlsCreated}}

  <table class="table mt-5">
  <thead>
    <tr>
      <th scope="col">Original</th>
      <th scope="col">Shortened</th>
    </tr>
  </thead>
  <tbody>
    {{#each urlsCreated}}
    <tr>
      <th scope="col">{{original}}</th>
      <th scope="col">{{new}}</th>
    </tr>
    {{/each}}

  </tbody>
</table>
{{/if}}

</main>
